# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/whatsapp_analytics
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=whatsapp_analytics
DATABASE_USER=user
DATABASE_PASSWORD=password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# WhatsApp Business API Configuration
WHATSAPP_TOKEN=your-whatsapp-business-api-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token
WHATSAPP_WEBHOOK_SECRET=your-webhook-secret-for-signature-validation

# External APIs
OPENAI_API_KEY=your-openai-api-key-for-nlp
SENTIMENT_API_URL=https://api.sentiment-analysis.com

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=*
CORS_CREDENTIALS=true
