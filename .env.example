# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/datacompass
MONGODB_URI=mongodb://localhost:27017/datacompass
DATABASE_HOST=localhost
DATABASE_PORT=27017
DATABASE_NAME=datacompass
DATABASE_USER=
DATABASE_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# WhatsApp Business API Configuration
WHATSAPP_TOKEN=your-whatsapp-business-api-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token
WHATSAPP_WEBHOOK_SECRET=your-webhook-secret-for-signature-validation

# External APIs
OPENAI_API_KEY=your-openai-api-key-for-nlp
SENTIMENT_API_URL=https://api.sentiment-analysis.com

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Domain Configuration
DOMAIN_NAME=ultimatesystems.io
API_DOMAIN=api.ultimatesystems.io
ADMIN_DOMAIN=administrativo.ultimatesystems.io
DASHBOARD_DOMAIN=dashboard.ultimatesystems.io
BASE_URL=https://ultimatesystems.io
API_BASE_URL=https://api.ultimatesystems.io

# SSL/TLS Configuration
SSL_ENABLED=true
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000

# Load Balancer Configuration
TRUST_PROXY=true
PROXY_PROTOCOL=true

# Health Check Configuration
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_TIMEOUT=5000

# Webhook Configuration
WEBHOOK_BASE_URL=https://api.ultimatesystems.io/api/whatsapp/webhook
WEBHOOK_VERIFY_TOKEN=datacompass_webhook_2025

# Application URLs
ADMIN_PANEL_URL=https://administrativo.ultimatesystems.io
DASHBOARD_URL=https://dashboard.ultimatesystems.io
API_DOCS_URL=https://api.ultimatesystems.io/docs

# Security Headers
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
REFERRER_POLICY=strict-origin-when-cross-origin

